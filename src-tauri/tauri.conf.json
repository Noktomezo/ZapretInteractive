{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zapret-interactive",
  "version": "0.1.0",
  "identifier": "com.noktomezo.zapret-interactive",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zapret Interactive",
        "width": 900,
        "height": 650,
        "minWidth": 800,
        "minHeight": 500,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/100x100.png", "icons/icon.ico"]
  }
}
