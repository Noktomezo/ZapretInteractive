{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZapretInteractive",
  "version": "1.0.2",
  "identifier": "com.noktomezo.zapret-interactive",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zapret Interactive",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "center": true,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/100x100.png", "icons/icon.ico"]
  }
}
